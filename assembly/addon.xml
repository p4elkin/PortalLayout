<assembly>
	<id>addon</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.vaadin.addon:PortalLayout</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<includes>
							<include>com.allen-sauer.gwt.dnd:gwt-dnd</include>
						</includes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<includes>
				<include>licensing.txt</include>
				<include>license-*.txt</include>
				<include>DEPENDENCIES.txt</include>
				<include>**/README.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>addon/target</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>${addonJarName}</include>
				<include>${addonFullName}-sources.jar</include>
				<include>${addonFullName}-javadoc.jar</include>
			</includes>
		</fileSet>
		<!-- These are in the javadoc and sources JARs -->
		<!-- <fileSet> <directory>addon/target/site</directory> <outputDirectory></outputDirectory> 
			<includes> <include>apidocs/**</include> </includes> </fileSet> <fileSet> 
			<directory>addon/src/main</directory> <outputDirectory>addon/src/main</outputDirectory> 
			<includes> <include>**</include> </includes> </fileSet> -->
		<fileSet>
			<directory>demo/src/main/java</directory>
			<outputDirectory>demo/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>demo/src/main/webapp</directory>
			<outputDirectory>demo/WebContent</outputDirectory>
			<includes>
				<include>WEB-INF/**</include>
			</includes>
		</fileSet>
		<!-- Copy the manifest extracted from the add-on JAR to the ZIP -->
		<fileSet>
			<directory>target/${addonFullName}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>META-INF/MANIFEST.MF</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>manual/target/docbkx/pdf/manual.pdf</source>
			<outputDirectory></outputDirectory>
			<destName>${addonFullName}-manual.pdf</destName>
		</file>
	</files>
</assembly>